          "label": "t:sections.product-highlight.blocks.highlight_description.settings.desc_size_product_card.label",
          "default": "<p>Single, Single Standar, Single XL, Double, Queen</p>"
        },
        {
          "type": "image_picker",
          "id": "image_certi_card",
          "label": "t:sections.product-highlight.blocks.highlight_description.settings.image_certi_card.label"
        },
        {
          "type": "text",
          "id": "title_rating_one",
          "label": "t:sections.product-highlight.blocks.highlight_description.settings.title_rating_one.label",
          "default": "Soft"
        },
        {
