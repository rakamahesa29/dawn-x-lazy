{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 768px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  @media screen and (max-width: 767px) {
    .section-{{ section.id }}-padding {
      padding-top: 40px;
      padding-bottom: 40px;
    }
  }
{%- endstyle -%}

<section class="section-{{ section.id }}-padding page-width color-{{ section.settings.color_scheme }}">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="title-instagram-post">
          <h2 class="{{ section.settings.heading_size }}">{{ section.settings.title }}</h2>
          <div class="navigation-slider">
            <div class="swiper-button-prev custom-nav-swiper"></div>
            <div class="swiper-button-next custom-nav-swiper"></div>
          </div>
        </div>
        <div class="post-content">
          <div class="swiper igSwiper">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
                <div class="swiper-slide swiper-slide-custome">
                  <a href="{{ block.settings.image_link }}">
                    <div class="hover-image-ig">
                      <img
                        src="{{ block.settings.image_icon | img_url: 'master' }}"
                        alt="{{ block.settings.image_icon.alt | escape }}"
                      >
                    </div>
                    <div class="image-instagram">
                      <img
                        src="{{ block.settings.image | img_url: 'master' }}"
                        alt="{{ block.settings.image.alt | escape }}"
                      >
                    </div>
                  </a>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Instagram Gallery",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Instagram Gallery",
      "label": "t:sections.instagram-gallery.settings.title.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default":40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.instagram-gallery.blocks.image.settings.image.label"
        },
        {
          "type": "image_picker",
          "id": "image_icon",
          "label": "t:sections.instagram-gallery.blocks.image.settings.image_icon.label"
        },
        {
          "type": "url",
          "id": "image_link",
          "label": "t:sections.instagram-gallery.blocks.image.settings.image_link.label"
        }
      ]
    }
  ],
  "max_blocks": 8,
  "presets": [
    {
      "name": "Instagram Gallery"
    }
  ]
}
{% endschema %}
