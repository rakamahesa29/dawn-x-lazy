{{ 'custome-style.css' | asset_url | stylesheet_tag }}

<section class="section-custome-full">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="title-banner">
          <h3>{{ section.settings.title }}</h3>
        </div>
      </div>
    </div>
  </div>
  <div class="container-fluid con-image-banner p-0">
    <div class="row p-0">
      {% for block in section.blocks %}
        <div class="col-lg-6 col-md-6 col-sm-12 col-12 p-0">
        <div class="image-banner">
            <a href="{{ block.settings.image_link }}">
              <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt | escape }}">
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Banner Image",
    "class": "section",
    "tag": "section",
    "settings": [
      {
        "type": "inline_richtext",
        "id": "title",
        "default": "Custome Banner Image",
        "label": "t:sections.banner-image.settings.title.label"
      },
      {
        "type": "select",
        "id": "heading_size",
        "options": [
          {
            "value": "h2",
            "label": "t:sections.all.heading_size.options__1.label"
          },
          {
            "value": "h1",
            "label": "t:sections.all.heading_size.options__2.label"
          },
          {
            "value": "h0",
            "label": "t:sections.all.heading_size.options__3.label"
          }
        ],
        "default": "h1",
        "label": "t:sections.all.heading_size.label"
      },
      {
        "type": "select",
        "id": "background_style",
        "options": [
          {
            "value": "none",
            "label": "t:sections.banner-image.settings.background_style.options__1.label"
          },
          {
            "value": "primary",
            "label": "t:sections.banner-image.settings.background_style.options__2.label"
          }
        ],
        "default": "primary",
        "label": "t:sections.banner-image.settings.background_style.label"
      },
      {
        "type": "text",
        "id": "button_label",
        "default": "Button label",
        "label": "t:sections.banner-image.settings.button_label.label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "t:sections.banner-image.settings.button_link.label"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "scheme-1"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "t:sections.banner-image.blocks.image.settings.image.label"
          },
          {
            "type": "url",
            "id": "image_link",
            "label": "t:sections.banner-image.blocks.image.settings.image_link.label"
          }
        ]
      }
    ],
    "max_blocks": 4,
    "presets": [
      {
        "name": "Custom Banner Image"
      }
    ]
  }
  {% endschema %}
  