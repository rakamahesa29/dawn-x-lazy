<style>
  .popup-card-container {
    width: 100vw;
    height: 100vh;
    position: fixed;
    background-color: #00575080;
    z-index: 1000;
    overflow: hidden;
    display: flex;
  }
  .popup-card-container.close {
    display: none !important;
  }
  .popup-card-content {
    width: 60%;
    margin-left: auto;
    margin-right: auto;
    display: flex;
    align-items: center;
    margin-top: auto;
    margin-bottom: auto;
    background-color: #fff;
    position: relative;
  }
  .popup-card-content img {
    width: 50%;
    height: 100%;
    object-fit: cover;
  }
  .content-popup-card {
    width: 50%;
    padding: 20px;
    gap: 20px;
    display: flex;
    flex-direction: column;
  }
  .content-popup-card h2 {
    font-size: 24px;
    text-align: center;
    color: #005750;
    letter-spacing: 0.8px;
    font-weight: 600;
  }
  .content-popup-card p {
    font-size: 16px;
    text-align: center;
    color: #005750;
    letter-spacing: 0.8px;
  }
  .pop-card-button-close {
    position: absolute;
    right: 20px;
    top: 20px;
    width: 40px;
    height: 40px;
  }
  .form-input-custome-card {
    padding: 0;
    height: 40px;
    border: 1px solid #00575050;
    color: #005750;
  }
  .field-label-custome-card {
    font-size: 14px;
    color: #005750;
  }
  .custome-card-field-button {
    height: 40px;
  }
  .custome-card-field-button>svg {
    height: 1.5rem;
    width: 2.5rem;
  }
  .form__message {
    color: #005750;
    font-size: 10px;
  }

  @media screen and (max-width: 1200px) {
    .popup-card-content {
        width: 80%;
    }
    .content-popup-card h2 {
        font-size: 20px;
    }
  }

  @media screen and (max-width: 992px) {
    .popup-card-content {
        width: 80%;
    }
    .content-popup-card h2 {
        font-size: 20px;
    }
    .content-popup-card p {
        font-size: 14px;
    }
  }

  @media screen and (max-width: 767px) {
    .popup-card-content {
        flex-direction: column;
        width: 90%;
        height: 90%;
        overflow: scroll;
    }
    .popup-card-content img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .content-popup-card {
        width: 100%;
    }
    .content-popup-card h2 {
        font-size: 18px;
    }
    .content-popup-card p {
        font-size: 12px;
    }
  }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
    var closeButton = document.getElementById('popcardbuttonClose');
    closeButton.addEventListener('click', function() {
        var popupContainer = document.querySelector('.popup-card-container');
        popupContainer.classList.add('close');
    });
});
</script>

{% if settings.popup_card_enabled %}
  <div class="popup-card-container">
    <div class="popup-card-content">
        <svg class="pop-card-button-close" id="popcardbuttonClose" width="50" height="50" viewBox="0 0 50 50" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M33.7333 13.2167L24.8937 22.0542L16.0562 13.2167L13.1104 16.1625L21.9479 25L13.1104 33.8375L16.0562 36.7833L24.8937 27.9458L33.7333 36.7833L36.6791 33.8375L27.8416 25L36.6791 16.1625L33.7333 13.2167Z" fill="#005750"/>
        </svg>
      {% if settings.image_popup_card != blank %}
        <img src="{{ settings.image_popup_card | img_url: 'master' }}" alt="{{ 'popup_card.image_alt' | t }}">
      {% endif %}
      <div class="content-popup-card">
        <h2>{{ settings.title_popup_card }}</h2>
        <p>{{ settings.desc_popup_card }}</p>
        <div class="form-subscribe-popup-card">
          <div class="footer-block__newsletter">
            {%- form 'customer',
              id: 'ContactFooter',
              class: 'footer__newsletter newsletter-form newsletter-form-custome-card'
            -%}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="newsletter-form__field-wrapper form-email-custome-card">
                <div class="field">
                  <input
                    id="NewsletterForm--{{ section.id }}"
                    type="email"
                    name="contact[email]"
                    class="field__input form-input-custome-card"
                    value="{{ form.email }}"
                    aria-required="true"
                    autocorrect="off"
                    autocapitalize="off"
                    autocomplete="email"
                    {% if form.errors %}
                      autofocus
                      aria-invalid="true"
                      aria-describedby="ContactFooter-error"
                    {% elsif form.posted_successfully? %}
                      aria-describedby="ContactFooter-success"
                    {% endif %}
                    placeholder="{{ 'newsletter.label' | t }}"
                    required
                  >
                  <label class="field__label field-label-custome-card" for="NewsletterForm--{{ section.id }}">
                    {{ 'newsletter.label' | t }}
                  </label>
                  <button
                    type="submit"
                    class="newsletter-form__button field__button custome-card-field-button"
                    name="commit"
                    id="Subscribe"
                    aria-label="{{ 'newsletter.button_label' | t }}"
                  >
                    {% render 'icon-arrow' %}
                  </button>
                </div>
                {%- if form.errors -%}
                  <small
                    class="newsletter-form__message form__message form-message-custome-card"
                    id="ContactFooter-error"
                  >
                    {%- render 'icon-error' -%}
                    {{- form.errors.translated_fields.email | capitalize }}
                    {{ form.errors.messages.email -}}
                  </small>
                {%- endif -%}
              </div>
              {%- if form.posted_successfully? -%}
                <h3
                  class="newsletter-form__message form-message-custome-card newsletter-form__message--success form__message"
                  id="ContactFooter-success"
                  tabindex="-1"
                  autofocus
                >
                  {% render 'icon-success' -%}
                  {{- 'newsletter.success' | t }}
                </h3>
              {%- endif -%}
            {%- endform -%}
          </div>
        </div>
        <p>{{ settings.shortext_popup_card }}</p>
      </div>
    </div>
  </div>
{% endif %}
