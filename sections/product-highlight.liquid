        },
        {
          "type": "richtext",
          "id": "desc_product_card",
          "label": "t:sections.product-highlight.blocks.highlight_description.settings.desc_feature_product_card.label",
          "default": "<p>A mattress that you can freely customize according to your comfort level</p>"
